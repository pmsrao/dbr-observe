{
  "processing_config": {
    "batch_sizes": {
      "bronze_to_silver": 10000,
      "silver_to_gold": 50000,
      "metrics_calculation": 1000
    },
    "parallelism": {
      "bronze_processing": 4,
      "silver_processing": 2,
      "gold_processing": 1
    },
    "error_handling": {
      "max_retries": 3,
      "retry_delay_seconds": 60,
      "dead_letter_queue": true
    },
    "performance_tuning": {
      "auto_optimize": true,
      "auto_compact": true,
      "z_order_columns": ["workspace_id", "date"],
      "partition_columns": ["workspace_id", "date"]
    },
    "monitoring": {
      "enable_metrics": true,
      "enable_alerting": true,
      "alert_thresholds": {
        "processing_time_minutes": 30,
        "error_rate_percent": 5,
        "data_quality_score": 0.95
      }
    }
  }
}
